{
  "name": "generator-vtex-service",
  "version": "0.1.4",
  "description": "Generate VTEX Node service routes, middlewares and clients",
  "homepage": "",
  "author": {
    "name": "Julio Moreira",
    "email": "hello@juliomoreira.dev",
    "url": "http://juliomoreira.pro"
  },
  "files": [
    "generators"
  ],
  "main": "generators/index.js",
  "keywords": [
    "VTEX",
    "VTEX Service",
    "VTEX NodeJS",
    "yeoman-generator"
  ],
  "devDependencies": {
    "@types/yeoman-generator": "^3.1.4",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.6.0",
    "eslint-config-xo": "^0.27.2",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^3.0.9",
    "jest": "^26.1.0",
    "lint-staged": "^9.4.3",
    "prettier": "^1.19.1",
    "typescript": "^3.9.7",
    "yeoman-assert": "^3.1.0",
    "yeoman-test": "^1.7.0"
  },
  "engines": {
    "npm": ">= 4.0.0"
  },
  "dependencies": {
    "chalk": "^2.1.0",
    "yeoman-generator": "^2.0.1",
    "yosay": "^2.0.1"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "eslintConfig": {
    "extends": [
      "xo",
      "prettier"
    ],
    "env": {
      "jest": true,
      "node": true
    },
    "rules": {
      "prettier/prettier": "error"
    },
    "plugins": [
      "prettier"
    ]
  },
  "scripts": {
    "prebuild": "rm -rf generators",
    "build": "yarn prebuild && tsc",
    "postbuild": "yarn copy:templates",
    "copy:templates": "cd src && rsync -a --include=\"*/\" --include=\"*.template.ts\" --exclude=\"*\" . ../generators",
    "pretest": "yarn build",
    "test": "jest"
  },
  "repository": "https://github.com/juliomoreira/generator-vtex-service",
  "license": "MIT"
}
